  '¬°No te rindas! üîß Busca el software que hace √∫til a ese hardware espec√≠fico.',
];
function rand(a){ return a[Math.floor(Math.random()*a.length)]; }

function init(){
  nOk=0; nErr=0; matched.clear(); wrongLog=[];
  document.getElementById('pTotal').textContent = PAIRS.length;
  document.getElementById('game').classList.remove('hidden');
  document.getElementById('results').classList.remove('visible');
  buildBoard();
  upScore();
}

function buildBoard(){
  // Shuffle sw chips order
  const swOrder = shuffle(PAIRS.map(p=>p.sw));
  const hwOrder = shuffle(PAIRS.map(p=>p.hw));

  // SW bank
  const bank = document.getElementById('swBank');
  bank.innerHTML='';
  swOrder.forEach(sw=>{
    const div = document.createElement('div');
    div.className='sw-chip';
    div.id='sw-'+sw.id;
    div.dataset.swId=sw.id;
    div.innerHTML=`<span class="chip-emoji">${sw.emoji}</span>
      <div><div class="chip-name">${sw.name}</div><div class="chip-sub">${sw.sub}</div></div>`;
    // Desktop drag
    div.addEventListener('mousedown', onMouseDown);
    // Touch
    div.addEventListener('touchstart', onTouchStart, {passive:false});
    bank.appendChild(div);
  });

  // HW targets
  const targets = document.getElementById('hwTargets');
  targets.innerHTML='';
  hwOrder.forEach(hw=>{
    const div = document.createElement('div');
    div.className='hw-card';
    div.id='hw-'+hw.id;
    div.dataset.hwId=hw.id;
    div.innerHTML=`
      <div class="hw-top">
        <span class="hw-emoji">${hw.emoji}</span>
        <div><div class="hw-name">${hw.name}</div><div class="hw-hint">${hw.hint}</div></div>
      </div>
      <div class="drop-zone" id="dz-${hw.id}">Arrastra el software aqu√≠‚Ä¶</div>`;
    targets.appendChild(div);
  });
}

// ‚îÄ‚îÄ MOUSE DRAG ‚îÄ‚îÄ
let ghostEl, offsetX, offsetY;

function onMouseDown(e){
  const chip = e.currentTarget;
  if(chip.classList.contains('matched')) return;
  dragId = chip.dataset.swId;
  const sw = PAIRS.find(p=>p.sw.id===dragId).sw;

  // Ghost
  ghostEl = document.getElementById('dragGhost');
  document.getElementById('ghostEmoji').textContent = sw.emoji;
  document.getElementById('ghostName').textContent  = sw.name;
  ghostEl.style.display='flex';

  const r = chip.getBoundingClientRect();
  offsetX = e.clientX - r.left;
  offsetY = e.clientY - r.top;
  moveGhost(e.clientX, e.clientY);

  chip.classList.add('dragging');
  document.addEventListener('mousemove', onMouseMove);
  document.addEventListener('mouseup',   onMouseUp);
  e.preventDefault();
}

function onMouseMove(e){
  moveGhost(e.clientX, e.clientY);
  // Highlight hw-card under cursor
  clearDragOver();
  const el = getHwCardAt(e.clientX, e.clientY);
  if(el) el.classList.add('drag-over');
}

function onMouseUp(e){
  document.removeEventListener('mousemove', onMouseMove);
  document.removeEventListener('mouseup',   onMouseUp);
  ghostEl.style.display='none';
  const chip = document.getElementById('sw-'+dragId);
  if(chip) chip.classList.remove('dragging');
  clearDragOver();

  const el = getHwCardAt(e.clientX, e.clientY);
  if(el) tryMatch(dragId, el.dataset.hwId, chip, el);
  dragId=null;
}

// ‚îÄ‚îÄ TOUCH DRAG ‚îÄ‚îÄ
function onTouchStart(e){
  const chip = e.currentTarget;
  if(chip.classList.contains('matched')) return;
  dragId = chip.dataset.swId;
  const sw = PAIRS.find(p=>p.sw.id===dragId).sw;

  ghostEl = document.getElementById('dragGhost');
  document.getElementById('ghostEmoji').textContent = sw.emoji;
  document.getElementById('ghostName').textContent  = sw.name;
  ghostEl.style.display='flex';

  const t = e.touches[0];
  const r = chip.getBoundingClientRect();
  offsetX = t.clientX - r.left;
  offsetY = t.clientY - r.top;
  moveGhost(t.clientX, t.clientY);
  chip.classList.add('dragging');

  document.addEventListener('touchmove',  onTouchMove, {passive:false});
  document.addEventListener('touchend',   onTouchEnd);
  e.preventDefault();
}

function onTouchMove(e){
  const t = e.touches[0];
  moveGhost(t.clientX, t.clientY);
  clearDragOver();
  const el = getHwCardAt(t.clientX, t.clientY);
  if(el) el.classList.add('drag-over');
  e.preventDefault();
}

function onTouchEnd(e){
  document.removeEventListener('touchmove', onTouchMove);
  document.removeEventListener('touchend',  onTouchEnd);
  ghostEl.style.display='none';
  const chip = document.getElementById('sw-'+dragId);
  if(chip) chip.classList.remove('dragging');
  clearDragOver();

  const t = e.changedTouches[0];
  const el = getHwCardAt(t.clientX, t.clientY);
  if(el) tryMatch(dragId, el.dataset.hwId, chip, el);
  dragId=null;
}

// ‚îÄ‚îÄ HELPERS ‚îÄ‚îÄ
function moveGhost(x,y){
  ghostEl.style.left = (x - offsetX)+'px';
  ghostEl.style.top  = (y - offsetY)+'px';
}

function clearDragOver(){
  document.querySelectorAll('.hw-card.drag-over').forEach(el=>el.classList.remove('drag-over'));
}

function getHwCardAt(x,y){
  const cards = document.querySelectorAll('.hw-card:not(.matched)');
  for(const c of cards){
    const r = c.getBoundingClientRect();
    if(x>=r.left && x<=r.right && y>=r.top && y<=r.bottom) return c;
  }
  return null;
}

// ‚îÄ‚îÄ MATCH LOGIC ‚îÄ‚îÄ
function tryMatch(swId, hwId, chipEl, hwEl){
  // Find the correct hw for this sw
  const pair = PAIRS.find(p=>p.sw.id===swId);
  const correct = pair.hw.id === hwId;

  if(correct){
    nOk++;
    matched.add(swId);
    // Mark chip
    chipEl.classList.add('matched');
    // Mark hw card
    hwEl.classList.add('matched');
    // Replace drop zone with matched chip
    const dz = document.getElementById('dz-'+hwId);
    dz.outerHTML = `<div class="matched-chip">
      <span class="chip-emoji">${pair.sw.emoji}</span>
      <div><div class="chip-name">${pair.sw.name}</div></div>
      <span class="match-check">‚úì</span>
    </div>`;
    spawnConfetti(hwEl);
    document.getElementById('uniMsg').innerHTML = rand(UNI_CORRECT)
      +`<br><em style="font-size:12px;color:var(--muted)">${pair.sw.explain}</em>`;
    upScore();
    if(matched.size === PAIRS.length) setTimeout(showResults, 800);
  } else {
    nErr++;
    wrongLog.push({swId,hwId});
    chipEl.classList.add('wrong-flash');
    hwEl.classList.add('wrong-shake');
    setTimeout(()=>{
      chipEl.classList.remove('wrong-flash');
      hwEl.classList.remove('wrong-shake');
    },450);
    document.getElementById('uniMsg').innerHTML = rand(UNI_WRONG);
    upScore();
  }
}

function upScore(){
  document.getElementById('sOk').textContent  = nOk;
  document.getElementById('sErr').textContent = nErr;
  document.getElementById('pOk').textContent  = matched.size;
  document.getElementById('progFill').style.width = (matched.size/PAIRS.length*100)+'%';
}

function spawnConfetti(el){
  const r = el.getBoundingClientRect();
  const cx = r.left + r.width/2;
  const cy = r.top  + r.height/2;
  const colors=['#00e676','#00f5e4','#ffd93d','#ff2d9b','#a855f7'];
  for(let i=0;i<18;i++){
    const p = document.createElement('div');
    p.className='conf';
    p.style.cssText=`background:${colors[i%colors.length]};
      left:${cx}px;top:${cy}px;
      --tx:${(Math.random()-.5)*200}px;
      --ty:${(Math.random()-.8)*180}px;
      --r:${Math.random()*360}deg;
      animation-delay:${Math.random()*.1}s;
      border-radius:${Math.random()>.5?'50%':'2px'};`;
    document.body.appendChild(p);
    setTimeout(()=>p.remove(),950);
  }
}

function showResults(){
  document.getElementById('game').classList.add('hidden');
  const res = document.getElementById('results');
  res.classList.add('visible');

  const pct = Math.round((nOk/PAIRS.length)*100);
  const stars = pct>=90?'‚≠ê‚≠ê‚≠ê':pct>=60?'‚≠ê‚≠ê':'‚≠ê';
  const msg = pct>=90
    ? '¬°Perfecto, Explorador! üöÄ Formaste todos los equipos correctamente. Entiendes que el <strong>hardware y software se necesitan mutuamente</strong>.'
    : pct>=60
    ? '¬°Muy bien! Ya entiendes la relaci√≥n. Recuerda: cada hardware tiene un software que lo <strong>hace √∫til</strong>.'
    : '¬°Buen intento! La clave es pensar: <strong>¬øpara qu√© sirven juntos?</strong> Vuelve a intentarlo.';

  document.getElementById('resStars').textContent = stars;
  document.getElementById('resScore').textContent = nOk+'/'+PAIRS.length;
  document.getElementById('resMsg').innerHTML = msg;
  document.getElementById('uniMsg').innerHTML =
    stars+' <strong>¬°Actividad completada!</strong> Conectaste '+nOk+' de '+PAIRS.length+' parejas. ¬°Eres incre√≠ble! üöÄ';

  // Pairs review
  const grid = document.getElementById('pairsGrid');
  grid.innerHTML='';
  PAIRS.forEach(p=>{
    const ok = matched.has(p.sw.id);
    const div = document.createElement('div');
    div.className='pair-card '+(ok?'ok':'err');
    div.innerHTML=`
      <div class="pair-hw">
        <div class="pair-emoji">${p.hw.emoji}</div>
        <div class="pair-name">${p.hw.name}</div>
      </div>
      <div class="pair-arrow">${ok?'‚ö°':'?'}</div>
      <div class="pair-sw">
        <div class="pair-emoji">${p.sw.emoji}</div>
        <div class="pair-name">${p.sw.name}</div>
      </div>`;
    grid.appendChild(div);
  });
}

function restart(){ init(); }
init();
