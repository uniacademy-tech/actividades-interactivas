function shuffle(a){const r=[...a];for(let i=r.length-1;i>0;i--){const j=Math.floor(Math.random()*(i+1));[r[i],r[j]]=[r[j],r[i]];}return r;}

let nOk=0, nErr=0, matched=new Set(), wrongLog=[];
let dragId=null; // current dragging sw id

const UNI_CORRECT = [
  '¬°Perfecto! üéâ <strong>Hardware + Software = Equipo perfecto.</strong> Uno no funciona sin el otro.',
  '¬°Excelente conexi√≥n! ‚ö° As√≠ es como trabajan juntos el hardware y el software.',
  '¬°Correcto! üöÄ Cada hardware necesita su software para ser √∫til.',
